import java.util.*;
import java.io.*;

public class Main {
    public static void main(String args[]) {
            String ssx="xnnxsn";
            System.out.println(strr(ssx));
    }
     public static int strr(String n){
         if(n.isEmpty())
          return 0;
         if(n.charAt(0)=='x') 
          return  strr(n.substring(1))+ 1;
         return  strr(n.substring(1)); 
     }
}
